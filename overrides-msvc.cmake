foreach(lang C CXX)
    set(CMAKE_${lang}_FLAGS_DEBUG_INIT "")
    set(CMAKE_${lang}_FLAGS_INIT "")
    set(CMAKE_${lang}_FLAGS_RELEASE_INIT "")
    set(CMAKE_${lang}_STANDARD_LIBRARIES_INIT "")
endforeach()
# TODO: Needed until CORE-16426 (VS16 (2019), new __CxxFrameHandler4()) is fixed.
if(NOT MSVC_VERSION LESS 1920 AND ARCH STREQUAL "amd64")
    foreach(lang C CXX)
        set(CMAKE_${lang}_FLAGS_DEBUG_INIT "/d2FH4-")
        set(CMAKE_${lang}_FLAGS_INIT "/d2FH4-")
        set(CMAKE_${lang}_FLAGS_RELEASE_INIT "/d2FH4-")
        set(CMAKE_${lang}_STANDARD_LIBRARIES_INIT "/d2FH4-")
    endforeach()
endif()

foreach(type EXE MODULE SHARED)
    set(CMAKE_${type}_LINKER_FLAGS_DEBUG_INIT "/debug")
    set(CMAKE_${type}_LINKER_FLAGS_RELWITHDEBINFO_INIT "/debug")
endforeach()
